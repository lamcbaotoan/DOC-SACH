<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lv_Chapte"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="36dp"
    tools:context=".admin.AddBookActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                        <EditText
                            android:id="@+id/etBookName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tên sách" />

                        <EditText
                            android:id="@+id/etAuthor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tác giả" />

                        <EditText
                            android:id="@+id/etGenre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Thể loại" />

                        <Spinner
                            android:id="@+id/spStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:entries="@array/book_status_array" />

                        <EditText
                            android:id="@+id/etDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:maxLines="8"
                            android:hint="Mô tả" />

                        <EditText
                            android:id="@+id/etTranslationGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:hint="Nhóm dịch" />

                        <TextView
                            android:id="@+id/tvCoverTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Bìa sách:"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivCover"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="8dp"
                            android:background="#E0E0E0"
                            android:contentDescription="Bìa sách"
                            android:scaleType="centerCrop" />

                        <Button
                            android:id="@+id/btnSelectCover"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Chọn bìa sách" />

                </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnSaveBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorPrimary"
            android:text="Lưu sách"
            android:textColor="#FFFFFF" />

</LinearLayout>
